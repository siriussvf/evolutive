  <script>
    const centerStage = document.getElementById('center-stage');
    const messagesContainer = document.getElementById('messages-container');
    const input = document.getElementById('user-input');
    const sendBtn = document.getElementById('send-btn');
    const recordBtn = document.getElementById('record-btn');
    const addBtn = document.getElementById('add-btn');
    const addMenu = document.getElementById('add-menu');
    const searchToggle = document.getElementById('search-toggle-btn');
    const searchIndicator = document.getElementById('search-indicator');
    const searchChip = document.getElementById('search-chip');
    const voiceModeBtn = document.getElementById('voice-mode-btn');

    const voiceOverlay = document.getElementById('voice-overlay');
    const closeVoiceBtn = document.getElementById('close-voice-btn');
    const toggleSplitBtn = document.getElementById('toggle-split-btn');
    const voiceMuteBtn = document.getElementById('voice-mute-btn');
    const muteIcon = document.getElementById('mute-icon');
    const voiceStatus = document.getElementById('voice-status');
    const voiceOrb = document.getElementById('voice-orb');
    const voiceTranscriptLive = document.getElementById('voice-transcript-live');

    let isFirstMessage = true;
    let isRecording = false;
    let isSearchActive = false;
    let isLuminaMode = false;
    let isMuted = false;
    let isWindowed = false;
    let mediaRecorder;
    let audioChunks = [];
    let currentSessionId = null;

    // VAD & Recording state
    let audioContext;
    let analyser;
    let silenceStart = null;
    const SILENCE_THRESHOLD = 0.007; // Slightly more sensitive for local envs
    const SILENCE_DURATION = 5000;
    let isPlayingAudio = false;
    let currentAIResponseAudio = null;

    async function getAudioContext() {
      if (!audioContext) {
        audioContext = new (window.AudioContext || window.webkitAudioContext)();
      }
      if (audioContext.state === 'suspended') {
        await audioContext.resume();
      }
      return audioContext;
    }

    // UI Toggles
    addBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      addMenu.classList.toggle('hidden');
    });

    window.addEventListener('click', () => {
      addMenu.classList.add('hidden');
    });

    searchToggle.addEventListener('click', (e) => {
      e.stopPropagation();
      isSearchActive = !isSearchActive;
      searchIndicator.classList.toggle('bg-emerald-500', isSearchActive);
      searchIndicator.classList.toggle('bg-gray-600', !isSearchActive);
      searchChip.classList.toggle('hidden', !isSearchActive);
    });

    // Session Management
    async function loadSessions() {
      try {
        const res = await fetch('/api/chats');
        const sessions = await res.json();
        const list = document.getElementById('chat-sessions-list');
        list.innerHTML = '';

        sessions.forEach(s => {
          const div = document.createElement('div');
          div.className = `flex items-center gap-3 px-3 py-2 text-gray-400 hover:text-white hover:bg-white/5 rounded-lg cursor-pointer transition group ${currentSessionId == s.id ? 'bg-white/10 text-white' : ''}`;
          div.innerHTML = `
          <svg class="w-4 h-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/></svg>
          <span class="text-sm truncate flex-1">${s.title}</span>
        `;
          div.onclick = () => loadChatSession(s.id);
          list.appendChild(div);
        });
      } catch (e) { console.error("Error loading sessions:", e); }
    }

    async function loadChatSession(id) {
      currentSessionId = id;
      try {
        const res = await fetch(`/api/chats/${id}`);
        const data = await res.json();

        transitionToChatMode();
        messagesContainer.innerHTML = '';
        data.messages.forEach(m => {
          if (m.role === 'user') appendMessage('user', m.content);
          else {
            const mid = appendStreamingMessage();
            const panel = document.getElementById(mid).querySelector('.streaming-content');
            panel.innerHTML = formatText(m.content);
            finalizeMessage(mid, m.content);
          }
        });
        loadSessions(); // Highlight active
      } catch (e) { console.error("Error loading chat:", e); }
    }

    document.getElementById('new-chat-sidebar-btn').onclick = () => {
      currentSessionId = null;
      messagesContainer.innerHTML = '';
      transitionToHomeMode();
      loadSessions();
    };

    function transitionToHomeMode() {
      centerStage.classList.remove('opacity-0', 'pointer-events-none', '-translate-y-full');
      messagesContainer.classList.add('opacity-0', 'pointer-events-none');
      isFirstMessage = true;
    }

    // Auto-resize textarea
    input.addEventListener('input', function () {
      this.style.height = 'auto';
      this.style.height = (this.scrollHeight) + 'px';
    });

    // Enter to send
    input.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });

    async function sendMessage() {
      const text = input.value.trim();
      if (!text) return;

      transitionToChatMode();
      appendMessage('user', text);
      input.value = '';
      input.style.height = 'auto';

      const messageId = appendStreamingMessage();
      const messagePanel = document.getElementById(messageId).querySelector('.streaming-content');

      const startTime = Date.now();
      let tokenCount = 0;

      try {
        // Use fetch for streaming with session support
        const url = `/api/chat/stream?message=${encodeURIComponent(text)}&search=${isSearchActive}${currentSessionId ? `&session_id=${currentSessionId}` : ''}`;
        const response = await fetch(url);

        const reader = response.body.getReader();
        const decoder = new TextDecoder();
        let fullContent = "";

        while (true) {
          const { value, done } = await reader.read();
          if (done) break;

          const chunk = decoder.decode(value);
          const lines = chunk.split('\n');

          for (const line of lines) {
            if (line.startsWith('data: ')) {
              const data = JSON.parse(line.slice(6));
              if (data.session_id && !currentSessionId) {
                currentSessionId = data.session_id;
                loadSessions(); // Update sidebar list
              }
              if (data.content) {
                fullContent += data.content;
                tokenCount++; // Crude estimation
                // Real-time update
                messagePanel.innerHTML = formatText(fullContent);
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
              } else if (data.error) {
                messagePanel.innerHTML = `<span class="text-red-400">Error: ${data.error}</span>`;
              }
            }
          }
        }

        const endTime = Date.now();
        const latency = endTime - startTime;
        const tps = tokenCount / (latency / 1000);

        // Finalize message (add copy button, etc.)
        finalizeMessage(messageId, fullContent);

        // Send Telemetry (Fire and forget)
        fetch('/api/telemetry', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            model: 'Qwen 2.5 (Local)',
            latency_ms: latency,
            tokens_per_sec: tps.toFixed(2)
          })
        }).catch(err => console.error("Telemetry error:", err));

      } catch (e) {
        messagePanel.innerHTML = '<span class="text-red-400">Error de conexi贸n con el n煤cleo evolutivo.</span>';
        console.error(e);
      }
    }

    function transitionToChatMode() {
      if (isFirstMessage) {
        // Background and containers
        centerStage.classList.add('opacity-0', 'pointer-events-none');
        messagesContainer.classList.remove('opacity-0', 'pointer-events-none');

        // Move dock to literal bottom
        const inputDock = document.getElementById('input-dock');
        inputDock.classList.remove('p-6');
        inputDock.classList.add('p-4', 'bg-gradient-to-t', 'from-[#0a0a0a]', 'to-transparent');

        isFirstMessage = false;
      }
    }

    function appendMessage(role, text, isAudio = false) {
      const div = document.createElement('div');
      div.className = `flex gap-4 ${role === 'user' ? 'justify-end' : ''} animate-fade-in-up px-4 md:px-0`;

      if (role === 'user') {
        const content = isAudio
          ? `<div class="flex items-center gap-2"><span class="text-lg"></span> <div class="flex flex-col"><span class="text-[9px] text-gray-500 uppercase font-bold">Nota de Voz</span><span class="text-white italic text-sm">"${escapeHtml(text)}"</span></div></div>`
          : escapeHtml(text);
        div.innerHTML = `
                <div class="bg-[#222] text-white rounded-2xl px-4 py-2 max-w-lg border border-white/5 shadow-lg message-bubble">
                    ${content}
                </div>
            `;
      }
      messagesContainer.appendChild(div);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function appendStreamingMessage() {
      const id = 'msg-' + Date.now();
      const div = document.createElement('div');
      div.id = id;
      div.className = 'flex gap-5 animate-fade-in-up px-4 md:px-0';
      div.innerHTML = `
            <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-indigo-600 to-purple-600 flex-shrink-0 flex items-center justify-center shadow-lg">
                <span class="text-white font-bold text-[10px]">iE</span>
            </div>
            <div class="flex flex-col gap-2 w-full">
                <div class="font-bold text-[10px] text-indigo-400 uppercase tracking-widest">Respuesta Evolutiva</div>
                <div class="streaming-content text-gray-200 text-base leading-relaxed max-w-4xl markdown-prose message-bubble">
                    <span class="inline-block w-1.5 h-4 bg-indigo-500 animate-pulse align-middle"></span>
                </div>
                <div class="action-bar hidden flex gap-3 mt-1">
                    <button class="copy-btn text-[10px] text-gray-500 hover:text-white transition flex items-center gap-1">
                        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg> Copiar
                    </button>
                </div>
            </div>
        `;
      messagesContainer.appendChild(div);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
      return id;
    }

    function finalizeMessage(id, text) {
      const div = document.getElementById(id);
      const actionBar = div.querySelector('.action-bar');
      actionBar.classList.remove('hidden');

      const copyBtn = div.querySelector('.copy-btn');
      copyBtn.addEventListener('click', () => {
        navigator.clipboard.writeText(text);
        const span = copyBtn.querySelector('span') || copyBtn;
        const old = copyBtn.innerHTML;
        copyBtn.innerText = '隆Copiado!';
        setTimeout(() => { copyBtn.innerHTML = old; }, 2000);
      });
    }

    function escapeHtml(text) {
      const map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' };
      return text.replace(/[&<>"']/g, function (m) { return map[m]; });
    }

    function formatText(text) {
      let formatted = text.replace(/\n/g, '<br>');
      formatted = formatted.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
      formatted = formatted.replace(/```([\s\S]*?)```/g, '<pre class="bg-black/40 p-3 rounded-lg my-3 text-sm font-mono overflow-auto border border-white/5">$1</pre>');
      return formatted;
    }

    // Suggestion Handlers
    document.querySelectorAll('.suggestion-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const title = btn.querySelector('.font-medium').innerText;
        input.value = `H谩blame sobre: ${title}`;
        sendMessage();
      });
    });

    // New Modular Recording Logic
    async function startRecordingSession() {
      if (isRecording) return;

      try {
        const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
        const ctx = await getAudioContext();

        // Initialize VAD
        const source = ctx.createMediaStreamSource(stream);
        analyser = ctx.createAnalyser();
        analyser.fftSize = 256;
        source.connect(analyser);

        mediaRecorder = new MediaRecorder(stream);
        audioChunks = [];

        mediaRecorder.ondataavailable = e => audioChunks.push(e.data);
        mediaRecorder.onstop = () => {
          const audioBlob = new Blob(audioChunks, { type: 'audio/webm' });
          if (!isMuted || !isLuminaMode) {
            sendAudio(audioBlob);
          }
          cleanupVAD();
          stream.getTracks().forEach(track => track.stop());
        };

        mediaRecorder.start();
        isRecording = true;
        recordBtn.classList.add('text-red-500', 'animate-pulse');

        if (isLuminaMode) {
          voiceStatus.innerText = "Escuchando...";
          voiceOrb.classList.remove('thinking');
          voiceOrb.classList.add('listening');
          voiceOrb.className = "absolute inset-0 bg-gradient-to-tr from-indigo-500 via-purple-600 to-cyan-400 rounded-full blur-3xl opacity-50 animate-pulse";
        }

        initVADLoop();
      } catch (err) {
        console.error("Recording start error:", err);
        if (isLuminaMode) voiceStatus.innerText = "Error Micr贸fono";
      }
    }

    function stopRecordingSession() {
      if (!isRecording) return;
      if (mediaRecorder && mediaRecorder.state !== 'inactive') {
        mediaRecorder.stop();
      }
      isRecording = false;
      recordBtn.classList.remove('text-red-500', 'animate-pulse');

      if (isLuminaMode) {
        voiceStatus.innerText = "Procesando...";
        voiceOrb.className = "absolute inset-0 bg-gradient-to-tr from-purple-600 via-pink-500 to-indigo-500 rounded-full blur-3xl animate-pulse thinking";
      }
    }

    function initVADLoop() {
      const bufferLength = analyser.frequencyBinCount;
      const dataArray = new Uint8Array(bufferLength);
      silenceStart = null;

      function checkVAD() {
        if (!isRecording) return;
        if (isMuted && isLuminaMode) {
          silenceStart = null;
          requestAnimationFrame(checkVAD);
          return;
        }

        analyser.getByteTimeDomainData(dataArray);
        let sum = 0;
        for (let i = 0; i < bufferLength; i++) {
          const val = (dataArray[i] - 128) / 128;
          sum += val * val;
        }
        const rms = Math.sqrt(sum / bufferLength);

        // Interruption check
        if (rms > SILENCE_THRESHOLD * 3 && isPlayingAudio && currentAIResponseAudio) {
          currentAIResponseAudio.pause();
          isPlayingAudio = false;
          voiceStatus.innerText = "Te escucho...";
        }

        if (rms < SILENCE_THRESHOLD) {
          if (silenceStart === null) silenceStart = Date.now();
          else if (Date.now() - silenceStart > SILENCE_DURATION) {
            playLuminaBeep();
            stopRecordingSession();
            return;
          }
        } else {
          silenceStart = null;
        }

        requestAnimationFrame(checkVAD);
      }
      checkVAD();
    }

    // Voice Interaction
    voiceModeBtn.addEventListener('click', () => {
      isLuminaMode = true;
      voiceOverlay.classList.add('active');
      voiceStatus.innerText = "Preparando...";
      voiceOrb.className = "absolute inset-0 bg-gradient-to-tr from-indigo-500 via-purple-600 to-cyan-400 rounded-full blur-3xl opacity-20 animate-pulse-slow";

      // Auto-start recording
      setTimeout(() => {
        if (!isRecording) startRecordingSession();
      }, 500);
    });

    // NEW: Orb as a Fallback STOP button
    document.getElementById('voice-rings').addEventListener('click', () => {
      if (isRecording) {
        stopRecordingSession();
      } else if (!isPlayingAudio) {
        startRecordingSession();
      }
    });

    toggleSplitBtn.addEventListener('click', () => {
      isWindowed = !isWindowed;
      voiceOverlay.classList.toggle('windowed', isWindowed);
    });

    closeVoiceBtn.addEventListener('click', () => {
      isLuminaMode = false;
      isWindowed = false;
      voiceOverlay.classList.remove('active', 'windowed');
      if (isRecording) {
        mediaRecorder.stop();
        isRecording = false;
        recordBtn.classList.remove('text-red-500', 'animate-pulse');
      }
      if (currentAIResponseAudio) {
        currentAIResponseAudio.pause();
        currentAIResponseAudio = null;
      }
    });

    voiceMuteBtn.addEventListener('click', () => {
      isMuted = !isMuted;
      voiceMuteBtn.classList.toggle('mute-active', isMuted);
      muteIcon.innerHTML = isMuted
        ? `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2" />`
        : `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />`;

      if (isRecording) {
        // We handle mute by ignoring VAD levels if muted, or stop recording? 
        // Better to just not send if muted when silence duration is reached?
        // Actually, let's just use the mic's mute state if possible, but simpler: 
        // if muted, silenceStart will always be null? No, silenceStart will be true.
      }
    });

    recordBtn.addEventListener('click', () => {
      if (!isRecording) {
        startRecordingSession();
      } else {
        stopRecordingSession();
      }
    });

    function playLuminaBeep() {
      try {
        const ctx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = ctx.createOscillator();
        const gain = ctx.createGain();

        osc.type = 'sine';
        osc.frequency.setValueAtTime(880, ctx.currentTime); // A5
        osc.frequency.exponentialRampToValueAtTime(440, ctx.currentTime + 0.1); // Drop to A4

        gain.gain.setValueAtTime(0.1, ctx.currentTime);
        gain.gain.exponentialRampToValueAtTime(0.001, ctx.currentTime + 0.1);

        osc.connect(gain);
        gain.connect(ctx.destination);

        osc.start();
        osc.stop(ctx.currentTime + 0.1);
      } catch (e) {
        console.error("Audio beep error:", e);
      }
    }

    function cleanupVAD() {
      if (audioContext) {
        audioContext.close();
        audioContext = null;
      }
    }

    async function sendAudio(blob) {
      const formData = new FormData();
      formData.append("audio", blob, "voice.webm");

      try {
        const response = await fetch("/process", { method: "POST", body: formData });
        const data = await response.json();

        if (data.error) {
          if (isLuminaMode) voiceStatus.innerText = "Error de voz";
          return;
        }

        // Display transcription in user bubble
        appendMessage('user', data.transcript || "Audio", true);

        const messageId = appendStreamingMessage();
        const messagePanel = document.getElementById(messageId).querySelector('.streaming-content');
        messagePanel.innerHTML = formatText(data.response);
        finalizeMessage(messageId, data.response);

        if (isLuminaMode) {
          voiceStatus.innerText = "iE hablando...";
          voiceOrb.className = "absolute inset-0 bg-gradient-to-tr from-indigo-500 via-purple-600 to-cyan-400 rounded-full blur-3xl animate-pulse-slow listening";
          // Show response snippet in overlay
          voiceTranscriptLive.innerText = data.response.substring(0, 100) + (data.response.length > 100 ? "..." : "");
        }

        if (data.audio_url) {
          currentAIResponseAudio = new Audio(data.audio_url);
          isPlayingAudio = true;
          currentAIResponseAudio.play();
          currentAIResponseAudio.onended = () => {
            isPlayingAudio = false;
            if (isLuminaMode) {
              voiceStatus.innerText = "Listo";
              voiceOrb.className = "absolute inset-0 bg-gradient-to-tr from-indigo-500 via-purple-600 to-cyan-400 rounded-full blur-3xl opacity-20 animate-pulse-slow";

              // Auto-restart listening in Lumina mode (Infinite loop like GPT Live)
              setTimeout(() => {
                if (isLuminaMode && !isRecording) startRecordingSession();
              }, 500);
            }
          };
        }
      } catch (error) {
        console.error("Audio processing error:", error);
      }
    }

    // Initial Load
    loadSessions();
  </script>
  </body>
</html>
